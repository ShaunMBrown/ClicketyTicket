<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary", id: 'Log_in' %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    
    <br><br>
        <span class="input-group-btn okButton">
					<button class="btn btn-lg btn-primary okButton" id = "okButton2" type="button">
						<%= link_to "Go Back", root_path %>
					</button>
				</span>
    <!--<p><%= link_to "Go back", root_path %></p>-->
    
  </div>
</div>