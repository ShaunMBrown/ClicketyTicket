<% provide(:title, 'Sign up') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>
      
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :event_thumb %>
      <%= f.text_field :event_thumb, class: 'form-control' %>

      <%= f.label :venue %>
      <%= f.text_field :venue, class: 'form-control' %>
      
      <%= f.label :when_at %>
      <%= f.text_field :when_at, :value => date_mdY(@event.when_at), class: 'form-control' %>
      
      <%= f.label :total_tickets %>
      <%= f.text_field :total_tickets, class: 'form-control' %>
      
      <%= f.label :available_tickets %>
      <%= f.text_field :available_tickets, class: 'form-control' %>
      

      <%= f.submit "Create my event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>