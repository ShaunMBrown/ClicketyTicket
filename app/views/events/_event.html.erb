<% if ! @orders.nil? %>
  <% @orders.each do |order| %>
    

    <% if order.user_id == current_user.id %>
      <div class = "history_item">
        <div class="title"><p><%= Event.find(order.event_id).title %></p></div>
        <div class="when_at"><p><%= Event.find(order.event_id).when_at %></p></div>
      </div>
    <% end %>
    
  <% end %>
<% end %>